@model CoAlert.Application.Dtos.CategoriaDesastre.CategoriaDesastreResponseDto

@{
    ViewData["Title"] = "Excluir Categoria de Desastre";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esta categoria?</h3>
<div>
    <h4>Categoria de Desastre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NmTitulo)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DsCategoria)
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NmTipo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCategoriaDesastre" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div> 