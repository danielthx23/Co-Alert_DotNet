@model CoAlert.Application.Dtos.Comentario.ComentarioRequestDto

@{
    ViewData["Title"] = "Novo Comentário";
}

<div class="container">
    <h1>Novo Comentário</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="NmConteudo" class="control-label">Conteúdo</label>
                    <textarea asp-for="NmConteudo" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="NmConteudo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UsuarioId" class="control-label">Usuário</label>
                    <select asp-for="UsuarioId" class="form-select" asp-items="@(new SelectList(ViewBag.Usuarios, "IdUsuario", "NmUsuario"))">
                        <option value="">Selecione um usuário</option>
                    </select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PostagemId" class="control-label">Postagem</label>
                    <select asp-for="PostagemId" class="form-select" asp-items="@(new SelectList(ViewBag.Postagens, "IdPostagem", "NmTitulo"))">
                        <option value="">Selecione uma postagem</option>
                    </select>
                    <span asp-validation-for="PostagemId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 