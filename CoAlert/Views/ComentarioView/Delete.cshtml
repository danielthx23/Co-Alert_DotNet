@model CoAlert.Application.Dtos.Comentario.ComentarioResponseDto

@{
    ViewData["Title"] = "Excluir Comentário";
}

<div class="container">
    <h1>Excluir Comentário</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Atenção!</h4>
        <p>Você tem certeza que deseja excluir este comentário? Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Conteúdo</dt>
                        <dd class="col-sm-9">@Model.NmConteudo</dd>

                        <dt class="col-sm-3">Usuário</dt>
                        <dd class="col-sm-9">@Model.Usuario.NmUsuario</dd>

                        <dt class="col-sm-3">Postagem</dt>
                        <dd class="col-sm-9">@Model.Postagem.NmTitulo</dd>

                        <dt class="col-sm-3">Data de Envio</dt>
                        <dd class="col-sm-9">@Model.DtEnvio.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdComentario" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Exclusão
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </form>
        </div>
    </div>
</div> 