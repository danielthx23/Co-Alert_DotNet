@model CoAlert.Application.Dtos.Comentario.ComentarioResponseDto

@{
    ViewData["Title"] = "Detalhes do Comentário";
}

<div class="container">
    <h1>Detalhes do Comentário</h1>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Conteúdo</dt>
                        <dd class="col-sm-9">@Model.NmConteudo</dd>

                        <dt class="col-sm-3">Usuário</dt>
                        <dd class="col-sm-9">@Model.Usuario.NmUsuario</dd>

                        <dt class="col-sm-3">Postagem</dt>
                        <dd class="col-sm-9">@Model.Postagem.NmTitulo</dd>

                        <dt class="col-sm-3">Data de Envio</dt>
                        <dd class="col-sm-9">@Model.DtEnvio.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Curtidas</dt>
                        <dd class="col-sm-9">@Model.NrLikes</dd>

                        @if (Model.IdComentarioParente.HasValue)
                        {
                            <dt class="col-sm-3">Resposta ao comentário</dt>
                            <dd class="col-sm-9">#@Model.IdComentarioParente</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdComentario" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div> 