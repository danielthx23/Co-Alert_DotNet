@model CoAlert.Application.Dtos.Localizacao.LocalizacaoResponseDto

@{
    ViewData["Title"] = "Excluir Localização";
}

<div class="container">
    <h1>Excluir Localização</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Atenção!</h4>
        <p>Você tem certeza que deseja excluir esta localização? Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Logradouro</dt>
                        <dd class="col-sm-9">@Model.NmLogradouro</dd>

                        <dt class="col-sm-3">Número</dt>
                        <dd class="col-sm-9">@Model.NrNumero</dd>

                        <dt class="col-sm-3">Bairro</dt>
                        <dd class="col-sm-9">@Model.NmBairro</dd>

                        @if (!string.IsNullOrEmpty(Model.DsComplemento))
                        {
                            <dt class="col-sm-3">Complemento</dt>
                            <dd class="col-sm-9">@Model.DsComplemento</dd>
                        }

                        <dt class="col-sm-3">CEP</dt>
                        <dd class="col-sm-9">@Model.NrCep</dd>

                        <dt class="col-sm-3">Cidade</dt>
                        <dd class="col-sm-9">@Model.NmCidade</dd>

                        <dt class="col-sm-3">Estado</dt>
                        <dd class="col-sm-9">@Model.NmEstado</dd>

                        <dt class="col-sm-3">País</dt>
                        <dd class="col-sm-9">@Model.NmPais</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdLocalizacao" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Exclusão
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </form>
        </div>
    </div>
</div> 