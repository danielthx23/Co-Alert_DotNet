@model CoAlert.Application.Dtos.Usuario.UsuarioResponseDto

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container">
    <h1>Detalhes do Usuário</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.NmUsuario</h5>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.NmEmail</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div> 