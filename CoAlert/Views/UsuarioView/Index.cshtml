@model IEnumerable<CoAlert.Application.Dtos.Usuario.UsuarioResponseDto>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container">
    <h1>Usuários</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Usuário
        </a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 usuario-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.NmUsuario</h5>
                        <p class="card-text">
                            <strong>Email:</strong> @item.NmEmail<br />
                        </p>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
} 